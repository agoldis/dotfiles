! Black transparent background
URxvt*.depth:             32
URxvt*.background:        [80]#000000
URxvt*.foreground:        [100]#B2B2B2

! Terminus font, installed from apt
URxvt*.font:              xft:Terminus:size=12

! The default ixon is butt-ugly!
URxvt*.iconFile:          /usr/share/icons/oxygen/128x128/apps/utilities-terminal.png

! I think having this is a good thing?
URxvt*.loginShell:        true

! Nice and large, no window decorations
URxvt*.geometry:          200x60
URxvt*.scrollBar:         false
URxvt*.borderLess:        true
URxvt*externalBorder:     0
URxvt*internalBorder:     0

! Dont blank the cursor - ever
URxvt*pointerBlankDelay:  987654321
